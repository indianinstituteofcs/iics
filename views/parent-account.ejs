<div>
    <h3 class="container text-center" style="margin-top:1rem">Parent's Account</h3>
    <div class="col" style="margin-top:2rem">
        <h4 class="container text-center">New to IICS? Register Please</h4>
        <form name="form-sign-up" method="POST" action="/parent-account?type=register" style="margin-top:2rem">
            <div class="text-center">
                <label for="register_user_email" style="width:5rem;text-align:right;">Email: </label>
                <% if((typeof registerEmail === 'undefined') || (registerEmail === null)){ %>
                    <input id="register_user_email" type="email" name="register_user_email" placeholder="Email address..." style="width:65%;">
                <% } else { %>
                    <input id="register_user_email" type="email" name="register_user_email"  style="width:65%;" pattern="/^[a-zA-Z0-9.!#$%&'*+/=?^_`{|}~-]+@[a-zA-Z0-9-]+(?:\.[a-zA-Z0-9-]+)*$/" value=<%= registerEmail; %>>
                <% }; %>
            </div>
            <div class="text-center" style="margin-top:1rem">
                <input type="submit" value="Sign Up" style="width:35%" class="btn btn-md btn-info">
            </div>
        </form>  
        
        <hr style="width:95%;text-align:center;border-width:2px;border-color:#234234;margin-top:2rem">

        <h4 class="container text-center" style="margin-top:2rem">Already have an account? Register Log In</h4>
        <form name="form-login" method="POST" action="/parent-account?type=login" style="margin-top:2rem">
            <div class="text-center">
                <label for="login_user_email" style="width:5rem;text-align:right;">Email: </label>
                <% if((typeof loginEmail === 'undefined') || (loginEmail === null) ){ %>
                    <input id="login_user_email" type="email" name="login_user_email" placeholder="Email address..." style="width:65%;">
                <% } else { %>
                    <input id="login_user_email" type="email" name="login_user_email" style="width:65%;" value=<%= loginEmail; %>>
                <% }; %>
            </div>
            <div class="text-center" style="margin-top:1rem">
                <label for="user_password" style="width:5rem;text-align:right;">Password: </label>
                <input id="user_password" type="password" name="user_password" placeholder="Alphanumeric. Length is 8 to 20" style="width:65%;">
            </div>
            <div class="text-center" style="margin-top:1rem">
                <input type="submit" value="Log In" style="width:35%" class="btn btn-md btn-info">
            </div>
        </form>  

    </div>
</div>
